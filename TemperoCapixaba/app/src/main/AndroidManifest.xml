<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.creativityloop.android.temperocapixaba"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".TemperoCapixabaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MeusPedidosActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PedidoDetalhesActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.MeusPedidosActivity"/>
        <activity
            android:name=".activity.CardapioDiarioActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.MeusPedidosActivity"/>
        <activity
            android:name=".activity.ResumoPedidoActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.CardapioDiarioActivity"/>
        <activity
            android:name=".activity.FinalizarPedidoActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.ResumoPedidoActivity"/>
        <activity
            android:name=".activity.SobreActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activity.MeusPedidosActivity"/>

        <!-- Sugar Database Config -->
        <meta-data
            android:name="DATABASE"
            android:value="temperoCapixaba.db"/>
        <meta-data
            android:name="VERSION"
            android:value="2"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.creativityloop.android.temperocapixaba"/>
    </application>

</manifest>
