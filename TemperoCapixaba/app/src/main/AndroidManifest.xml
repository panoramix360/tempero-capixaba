<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativityloop.android.temperocapixaba" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="TemperoCapixabaApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ResumoPedidoActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"/>

        <activity
            android:name=".SobreActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"/>

        <!-- Sugar Database Config -->
        <meta-data android:name="DATABASE" android:value="temperoCapixaba.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.creativityloop.android.temperocapixaba" />
    </application>

</manifest>
