<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/second_action_bar">

        <TextView
            android:id="@+id/cardapio_diario_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="CardÃ¡pio do dia"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardapio_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:padding="4dp" />

    <Button
        android:id="@+id/fazer_pedido_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cardapio_button"
        android:background="#a10503"
        android:textColor="#ffffff"
        android:layout_gravity="bottom|center" />
</LinearLayout>